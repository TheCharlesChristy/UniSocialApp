RewriteEngine On

# Ensure we skip any existing files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Skip if already in Templates directory
RewriteCond %{REQUEST_URI} !^/Templates/

# Remove .html from the end if present (to prevent double extension)
RewriteCond %{REQUEST_URI} !\.html$

# Main rewrite rule for pages
RewriteRule ^([^/]+)/?$ Templates/$1.html [L]

# Handle subdirectories
RewriteRule ^([^/]+)/([^/]+)/?$ Templates/$1/$2.html [L]

# Prevent direct access to Templates directory
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+Templates/
RewriteRule ^Templates/ - [F]

# Set default index page
DirectoryIndex index.html

# Additional security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Prevent directory listing
Options -Indexes

# Handle 404 errors
ErrorDocument 404 /Templates/404.html